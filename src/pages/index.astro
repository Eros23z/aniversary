---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Timeline from '../components/Timeline.jsx';
import Gallery from '../components/Gallery.jsx';
import Soundtrack from '../components/Soundtrack.jsx';
import SealedMessage from '../components/SealedMessage.jsx';
import ScrollToMusicButton from '../components/ScrollToMusicButton.jsx';
---

<Layout title="Crónicas de un Amor Inmortal">
  
  <section id="umbral" class="seccion-hero">
    <div class="container">
      <h1>Crónicas de un Amor Inmortal</h1>
      <p class="subtitulo">Para ti, mi eterna compañera. Feliz Aniversario.</p>
      <div class="scroll-down-indicator">↓</div>
    </div>
  </section>

  <section id="historia" class="seccion-contenido animate-on-scroll">
    <div class="container">
      <h2>Nuestra Historia</h2>
      <Timeline client:visible />
    </div>
  </section>

  <section id="galeria" class="seccion-contenido animate-on-scroll">
    <div class="container">
      <h2>Galería de Momentos</h2>
      <Gallery client:visible />
	  <ScrollToMusicButton client:visible />
    </div>
  </section>

  <section id="banda-sonora" class="seccion-contenido animate-on-scroll">
    <div class="container">
      <h2>La Melodía de Nuestra Eternidad</h2>
      <Soundtrack client:visible />
    </div>
  </section>
  
  <section id="mensaje" class="seccion-contenido animate-on-scroll">
    <div class="container">
      <h2>Un Mensaje Sellado</h2>
      <SealedMessage client:load />
    </div>
  </section>

</Layout>